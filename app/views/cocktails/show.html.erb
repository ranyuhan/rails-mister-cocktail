<h1>Cocktails#show</h1>
<%= @cocktail.name  %>
<ul>
  <% @cocktail.doses.each do |dose|  %>
    <li><%= dose.description %> <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure to delete?"}  %></li>
  <% end %>
</ul>

<%= link_to "Back", cocktails_path  %> | <%= link_to "Add a new dose",  new_cocktail_dose_path(@cocktail)  %>
