<div class="col-xs-12 col-sm-offset-3 col-sm-6 ">
  <div class="row">
    <div id="cocktail_form">
      <h3>Share Your Secret Cocktail Recipe</h3>
        <%= simple_form_for (@cocktail) do |f| %>
          <%= f.input :name %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit 'Share', class: "btn btn-primary" %> | <%= link_to "Cancel", cocktails_path, class: "btn btn-warning" %>
        <% end %>
    </div>
  </div>
</div>



