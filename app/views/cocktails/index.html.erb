<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/1005642/pexels-photo-1005642.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
  <div class="banner-content">
    <h1><span id="banner-typed-text"></span></h1>

    <a class="btn btn-primary btn-lg">Share your Secret Recipe</a>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to  cocktail_path(cocktail) do %>
          <div class= "card">
            <%= cocktail.photo %>
            <%= cocktail.name %>
        </div>
        <% end %>
      </div>
   <% end %>
  </div>
</div>




