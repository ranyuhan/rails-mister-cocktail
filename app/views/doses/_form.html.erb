
<div class="col-xs-12 col-sm-offset-3 col-sm-6 ">
  <div class="row">
    <div id="cocktail_form">
      <h3>Add A Dose</h3>
          <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.association :ingredient, collection: Ingredient.all, hint: "Pick a ingredient from all database"%>
          <%= f.input :description %>
          <%= f.submit 'Add', class: "btn btn-primary" %> | <%= link_to "Cancel", cocktails_path, class: "btn btn-warning" %>
        <% end %>
    </div>
  </div>
</div>
